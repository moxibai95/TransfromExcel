<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="600.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.SecondController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <Button fx:id="sendMail" mnemonicParsing="false" onAction="#sendMail" text="发送邮件" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <TextField fx:id="begin" onAction="#sendMail" promptText="输入起始行数" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="finish" onAction="#sendMail" promptText="输入截止行数" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="title" onAction="#sendMail" promptText="邮件主题" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="content" onAction="#sendMail" promptText="邮件文案" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="reciver" onAction="#sendMail" promptText="收件人邮箱" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <TextField fx:id="loginName" onAction="#sendMail" promptText="邮箱前缀" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <TextField fx:id="password" onAction="#sendMail" promptText="邮箱密码" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   </children>
</GridPane>
